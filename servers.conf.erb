limit_req_zone $binary_remote_addr zone=one:10m rate=1r/s;

server {
    server_name facili-tacct.beta.gouv.fr;
    listen <%= ENV['PORT'] %>;
    charset utf-8;
    location / {
        modsecurity on;
        modsecurity_rules_file secrules.conf;
        limit_req zone=one burst=5;
        proxy_pass http://facili-tacct.osc-fr1.scalingo.io;
        proxy_set_header Host facili-tacct.beta.gouv.fr
    }
}
